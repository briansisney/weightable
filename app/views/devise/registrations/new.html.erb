<div class="large-4 columns small-centered backs">
  <h2>Sign up</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    
    <div><%= f.label :name %><br />
    <%= f.text_field :name, :autofocus => true %></div>

    <div><%= f.label :pic %><br />
    <%= f.file_field :pic %></div>

    <div><%= f.label :goal %><br />
    <%= f.text_field :goal, :autofocus => true %></div>
    <div><h6>Height:</h3></div>
    <div><%= f.label :feet %>
    <%= f.text_field :height_feet, :autofocus => true %></div>

    <div><%= f.label :inches %>
    <%= f.text_field :height_in, :autofocus => true %></div>

    <div><%= f.label :email %><br />
    <%= f.email_field :email, :autofocus => true %></div>

    <div><%= f.label :password %><br />
    <%= f.password_field :password %></div>

    <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %></div>

    <div><%= f.submit "Sign up" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>